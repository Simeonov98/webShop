{% block title %}New News{% endblock %}

{% block body %}
    <form action="{{ path('admin_news_edit')}}" method="post">

        <div class="row">
            <div class="card-body">
                <div class="row">
                    <div class="form-group col-6">
                        <label for="name">Title</label>
                        <input type="text" class="form-control" name="title" placeholder="Enter Title" {% if new is not null %} value="{{ new.title }}" {% endif %}>
                    </div>
                    <div class="form-group col-6" id="editor">
                        <label for="content">Content</label>
                        <input type="textarea" class="form-control" name="content" placeholder="Enter Content" {% if new is not null%} value="{{ new.content }}" {% endif %}>
                    </div>

                </div>

                {% if new is null %}
                    {#                    <div class="row">#}
